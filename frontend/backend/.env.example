# ============================================
# SSH SOCKS5 Proxy for IP-Whitelisted APIs
# ============================================
# Required when Canton API uses IP whitelisting.
# Set up a VPS (DigitalOcean, AWS, etc.) with a static IP
# that is whitelisted by the Canton API.

# Enable/Disable SSH tunnel (default: false)
# Set to "true" to enable the tunnel
SSH_TUNNEL_ENABLED=false

# SSH Host (hostname or IP of your proxy server)
SSH_HOST=

# SSH Username (e.g., "root" or "ubuntu")
SSH_USER=

# SSH Private Key (OpenSSH format)
# For multi-line keys, use \n for newlines:
# SSH_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----\nb3BlbnNzaC1rZXktdjEAAAAABG5vbmU...\n-----END OPENSSH PRIVATE KEY-----"
SSH_PRIVATE_KEY=

# SSH Port (default: 22)
SSH_PORT=22

# Local SOCKS proxy port (default: 8080)
SOCKS_PROXY_PORT=8080
